{
    "ts-node": {
        "files": true
    },
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "lib": ["es2017", "esnext"],
        "sourceMap": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true, // 发出装饰器元数据
        "experimentalDecorators": true, // 启用装饰器
        "resolveJsonModule": true, // 解析 json 文件
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true
    },
    "exclude": ["node_modules"]
}
